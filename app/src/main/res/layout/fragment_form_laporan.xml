<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/namaHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/beratBadan_hint">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/namaInp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Pelapor" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/daerahHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/namaHint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/daerahInp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Daerah Banjir" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/keteranganHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/daerahHint">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/keteranganInp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Keterangan" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imageViewOutline"
        android:layout_width="200dp"
        android:layout_margin="18dp"
        android:layout_height="200dp"
        android:src="@drawable/img_placeholder"
        android:layout_gravity="center"
        android:background="@drawable/bg_outline" />

   <com.google.android.material.button.MaterialButton
       android:id="@+id/btnSubmit"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginTop="16dp"
       android:layout_marginBottom="16dp"
       android:backgroundTint="@color/button_lapor"
       app:icon="@drawable/ic_send"
       android:text="SUBMIT">


   </com.google.android.material.button.MaterialButton>



</LinearLayout>
